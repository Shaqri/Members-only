<div class="container mt-3">
  <div class="border rounded p-0 mb-3">
    <div class="p-3">
      <div class="p-3 bg-light">
        <p class="mb-0 h3 text-dark"><%= @post.title %></p>
      </div>
      <div class=" border-top p-3">
        <p class="mb-0 text-dark"><%= @post.content %></p>
      </div>
    </div>
    <% if user_signed_in? %>
      <div class="px-3">
        <p class="bg-light border-top rounded py-3"><small class="px-3 text-secondary">Posted by:</small><%= @post.user.name %></p>
      </div>
    <% end %>
  </div>
</div>